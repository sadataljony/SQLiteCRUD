<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sadataljony.app.android.sqlitecrud">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.list.ListPersonActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Add Person Activity -->
        <activity
            android:name=".activity.add.AddPersonActivity"
            android:label="Add Person"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog.Alert" />
        <!-- Edit Person Activity -->
        <activity
            android:name=".activity.edit.EditPersonActivity"
            android:label="Edit Person"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog.Alert" />
        <!-- Dialog Edit Delete Close Activity -->
        <activity
            android:name=".activity.dialog.DialogEditDeleteCloseActivity"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog.Alert" />
    </application>

</manifest>